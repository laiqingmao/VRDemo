<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.demo.myvr"
          xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:name="com.demo.myvr.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.demo.myvr.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".vrmodule.presenter.activity.ImageDetailActivity"/>
        <activity android:name=".vrmodule.presenter.activity.VideoDetailActivity"/>
        <activity android:name=".vrmodule.presenter.activity.VideoPlayerActivity"/>
    </application>

</manifest>